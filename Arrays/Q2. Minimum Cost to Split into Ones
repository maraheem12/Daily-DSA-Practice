class Solution {
    public int minCost(int n) {
        if(n==1) return 0;
        Stack<Integer> st = new Stack<>();
        st.push(n);
        int cost=0;
        while(!st.isEmpty()){
            int m = st.pop();
            int s1 = m/2;
            int s2 = m-s1;
            cost += (s1*s2);
            if(s1 != 1){
                st.push(s1);
            }
            if(s2 != 1){
                st.push(s2);
            }
        }
        return cost;
    }
}
