class Solution {
    public int robber(int[] dp, int nums[], int n) {
        if(n==0) return nums[n];
        if(n<0) return 0;
        if(dp[n] != -1) return dp[n];

        int take = nums[n] + robber(dp, nums, n-2);
        int nottake = robber(dp, nums, n-1);

        dp[n] = Math.max(take, nottake);
        return dp[n];
    }
    public int rob(int[] nums) {
        int n = nums.length;
        int dp[] = new int[n];
        Arrays.fill(dp, -1);
        return robber(dp, nums, n-1);
    }
}
