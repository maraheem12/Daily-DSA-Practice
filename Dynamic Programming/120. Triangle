class Solution {
    public int dfs(List<List<Integer>> t, int i, int j, int[][] dp) {
        if (i == t.size() - 1)
            return t.get(i).get(j);

        if (dp[i][j] != Integer.MAX_VALUE)
            return dp[i][j];

        int down = t.get(i).get(j) + dfs(t, i + 1, j, dp);
        int diag = t.get(i).get(j) + dfs(t, i + 1, j + 1, dp);

        return dp[i][j] = Math.min(down, diag);
    }

    public int minimumTotal(List<List<Integer>> triangle) {
        int n = triangle.size();
        int[][] dp = new int[n][n];

        for (int i = 0; i < n; i++)
            Arrays.fill(dp[i], Integer.MAX_VALUE);

        return dfs(triangle, 0, 0, dp);
    }
}
