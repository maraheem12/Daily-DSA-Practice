class Solution {
    public static int maxSum(int[][] grid, int[][] dp, int i, int j) {
        if(i == 0 && j == 0 ) return grid[0][0];
        if(i < 0 || j < 0) return 1000000009;
        if(dp[i][j] != -1) return dp[i][j];

        int left = grid[i][j] + maxSum(grid, dp, i-1, j);
        int right = grid[i][j] + maxSum(grid, dp, i, j-1);

        dp[i][j] = Math.min(left, right);
        return dp[i][j];
    }
    public int minPathSum(int[][] grid) {
        int m = grid.length;
        int n =  grid[0].length;

        int dp[][] = new int[m][n];
        for(int i=0; i<m; i++){
            Arrays.fill(dp[i], -1);
        }
        return maxSum(grid, dp, m-1, n-1);
    }
}
