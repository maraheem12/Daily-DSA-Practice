class Solution {
    public int backtrack(int prices[], int idx, int buy, int t, int dp[][][], int n) {
        if (idx == n) {
            return 0;
        }
        if (t == 2) {
            return 0;
        }

        if (dp[idx][buy][t] != -1) {
            return dp[idx][buy][t];
        }
        int price = 0;
        if (buy == 1) {
            price = Math.max(-prices[idx] + backtrack(prices, idx + 1, 0, t, dp, n),
                    0 + backtrack(prices, idx + 1, 1, t, dp, n));
        } else {
            price = Math.max(prices[idx] + backtrack(prices, idx + 1, 1, t + 1, dp, n),
                    0 + backtrack(prices, idx + 1, 0, t, dp, n));
        }

        return dp[idx][buy][t] = price;
    }

    public int maxProfit(int[] prices) {
        int n = prices.length;
        int dp[][][] = new int[n][2][3];
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < 2; j++) {
                Arrays.fill(dp[i][j], -1);
            }
        }
        return backtrack(prices, 0, 1, 0, dp, n);
    }
}
