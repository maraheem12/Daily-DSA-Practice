class Solution {
    public int backtrack(int nums[], int n, int idx, int prev, int dp[][]){
        if(idx == n){
            return 0;
        }
        if(dp[idx][prev+1] != -1){
            return dp[idx][prev+1];
        }
        int take = 0 + backtrack(nums, n, idx+1, prev, dp);

        int notTake = 0;
        if(prev == -1  || nums[idx] > nums[prev]){
            notTake = 1 + backtrack(nums, n, idx+1, idx, dp);
        }

        return dp[idx][prev+1] = Math.max(take, notTake);
    }
    public int lengthOfLIS(int[] nums) {
        int n = nums.length;
        int dp[][] = new int[n][n+1];
        for(int i=0; i<n; i++){
            Arrays.fill(dp[i], -1);
        }
        return backtrack(nums, n, 0, -1, dp);
    }
}
