class Solution {
    public int backtrack(String word1, String word2, int n, int m, int dp[][]){
        if(n==0) return m;
        if(m==0) return n;

        if(dp[n][m] != -1){
            return dp[n][m];
        }
        
        if(word1.charAt(n-1) == word2.charAt(m-1)){
            return dp[n][m] = backtrack(word1, word2, n-1, m-1, dp);
        }

        int insert  = backtrack(word1, word2, n-1, m, dp);
        int delete  = backtrack(word1, word2, n, m-1, dp);
        int replace = backtrack(word1, word2, n-1, m-1, dp);

        return dp[n][m] = 1+Math.min(insert, Math.min(delete, replace));
    }
    public int minDistance(String word1, String word2) {
        int n = word1.length();
        int m = word2.length();

        int dp[][] = new int[n+1][m+1];
        for(int i[]: dp){
            Arrays.fill(i, -1);
        }
        return backtrack(word1, word2, n, m, dp);
    }
}
