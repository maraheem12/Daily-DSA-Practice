class Solution {
    public static  int path(int[][] obstacleGrid, int i, int j, int[][] dp) {
        if(i==0 && j==0){
            return 1;
        }
        if(i<0 || j<0){
            return 0;
        }
        if(i>=0 && j>=0 && obstacleGrid[i][j] == 1){
            return 0;
        }
        if(dp[i][j] != -1){
            return dp[i][j];
        }
        int left = path(obstacleGrid, i-1, j, dp);
        int right = path(obstacleGrid, i, j-1, dp);

        dp[i][j] = left+right;
        return dp[i][j];

    }
    public int uniquePathsWithObstacles(int[][] obstacleGrid) {
        int n = obstacleGrid[0].length;
        int m = obstacleGrid.length;
        if(obstacleGrid[0][0] == 1) return 0;

        int dp[][] = new int[m][n];
        for(int i=0; i<m; i++){
            Arrays.fill(dp[i], -1);
        }
        return path(obstacleGrid, m-1, n-1, dp);
    }
}
