class Solution {
    public int robber(int[] dp, int nums[], int n) {
        if(n==0) return nums[n];
        if(n<0) return 0;
        if(dp[n] != -1) return dp[n];

        int take = nums[n] + robber(dp, nums, n-2);
        int nottake = robber(dp, nums, n-1);

        dp[n] = Math.max(take, nottake);
        return dp[n];
    }
    public int rob(int[] nums) {
        int n = nums.length;
        if(n == 1 || n==0) return nums[0];
        int dp[] = new int[n];
        int nums1[] = new int[n];
        int nums2[] = new int[n];
        for(int i=0; i<n; i++){
            if(i != 0) nums1[i] = nums[i];
            if(i != n-1) nums2[i] = nums[i];
        }
        Arrays.fill(dp, -1);
        int first = robber(dp, nums1, n-1);
        int dp2[] = new int[n];
        Arrays.fill(dp2, -1);
        int second = robber(dp2, nums2, n-1);
        return Math.max(first, second);
    }
}
