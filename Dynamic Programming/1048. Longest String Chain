class Solution {
    public static boolean isConsist(String a, String b) {
        if (b.length() != a.length() + 1) return false;

        int i = 0, j = 0;

        while (j < b.length()) {
            if (i < a.length() && a.charAt(i) == b.charAt(j)) {
                i++;j++;
            }
            else{
                j++;
            }
        }
        return i == a.length();
    }

    
    public int longestStrChain(String[] words) {
        int n = words.length;
        int count=1;
        Arrays.sort(words, (a, b)-> a.length() - b.length());
        int dp[] = new int[n];
        Arrays.fill(dp, 1);

        for(int i=0; i<n; i++){
            for(int j=0; j<i; j++){
                if(isConsist(words[j], words[i]) && dp[j]+1 > dp[i]){
                    dp[i] = dp[j]+1;
                }
            }
            count = Math.max(count, dp[i]);
        }
        return count;
    }
}
