class Solution {
    public int check(int nums[], int mid, int n){
        int count = 0;
        for(int i=0; i<n; i++){
            if(nums[i] >= mid){
                count++;
            }
        }
        return count;
    }
    public int specialArray(int[] nums) {
        int n = nums.length;
        int l=0; 
        int h=n;

        while(l<=h){
            int mid = (l+h)/2;
            int x = check(nums, mid, n);
            if(x==mid){
                return x;
            }
            else if(x>mid){
                l = mid+1;
            }
            else{
                h=mid-1;
            }
        }

        return -1;
    }
}
